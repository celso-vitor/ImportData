<UserControl x:Class="SequenceAssemblerGUI.Assembly"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sequenceassemblergui="clr-namespace:SequenceAssemblerGUI"
             mc:Ignorable="av"
             FontFamily="Courier New" Background="WhiteSmoke">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>


        <GroupBox Header="Reference Sequence" Grid.Row="0">
            <DataGrid x:Name="DataGridFasta" AutoGenerateColumns="True">
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Alignments Table" Grid.Row="1">
            <DataGrid x:Name="DataGridAlignments"  AutoGenerateColumns="False" Grid.Row="1" Height="300" CanUserAddRows="False" LoadingRow="DataGridAlignments_LoadingRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Visibility="Hidden"/>
                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}"/>
                    <DataGridTextColumn Header="NormalizedIdentityScore" Binding="{Binding NormalizedIdentityScore}"/>
                    <DataGridTextColumn Header="SimilarityScore" Binding="{Binding SimilarityScore}"/>
                    <DataGridTextColumn Header="NormalizedSimilarity" Binding="{Binding NormalizedSimilarity}"/>
                    <DataGridTextColumn Header="AlignedAA" Binding="{Binding AlignedAA}"/>
                    <DataGridTextColumn Header="NormalizedAlignedAA" Binding="{Binding NormalizedAlignedAA}"/>
                    <DataGridTextColumn Header="GapsUsed" Binding="{Binding GapsUsed}"/>
                    <DataGridTextColumn Header="AlignedLargeSequence" Binding="{Binding AlignedLargeSequence}"/>
                    <DataGridTextColumn Header="AlignedSmallSequence" Binding="{Binding AlignedSmallSequence}"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <Button Content="Execute" Grid.Row="2" Click="CompareButton_Click" Width="72" HorizontalAlignment="Center" Margin="0,5,0,10"/>

        <GroupBox Header="Alignments" Grid.Row="4" Height="650">
            <Grid>
                <!-- Novo Grid para acomodar tanto o ScrollViewer quanto a Label -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Exibe a sequência de referência -->
                        <StackPanel Orientation="Horizontal" Background="LightBlue" Margin="4">
                            <ItemsControl ItemsSource="{Binding ReferenceAlignments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding CorDeFundo}" Width="20" Height="20" Margin="1">
                                            <TextBlock Text="{Binding Letra}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                        <!-- Exibe as sequências de alinhamento -->
                        <ItemsControl ItemsSource="{Binding Seq}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Adicione a dica de ferramenta à sequência de contig -->
                                        <Border BorderThickness="1" BorderBrush="Gray" Margin="4">
                                            <Border.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Text="{Binding ToolTipContent}" />
                                                </ToolTip>
                                            </Border.ToolTip>
                                            <ItemsControl ItemsSource="{Binding VisualAlignment}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="20" Height="20" Margin="1"
                                                         Background="{Binding CorDeFundo}">
                                                        <TextBlock Text="{Binding Letra}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </Border>
                                        <!-- Adicione o texto Tipo de Sequência abaixo da sequência alinhada -->
                                        <TextBlock Text="{Binding Tipo}" FontSize="10" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <Label x:Name="loadingLabel" Content="Loading..." Background="WhiteSmoke" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>      
            </Grid>
        </GroupBox>

        <!--<GroupBox Header="Assembly" Grid.Row="7">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                <TextBox Text="{Binding AssemblySequence}" FontFamily="Courier New" IsReadOnly="True" TextWrapping="NoWrap" Height="40"/>
            </ScrollViewer>
        </GroupBox>-->

    </Grid>
</UserControl>

